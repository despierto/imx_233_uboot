// STMP378x ROM command script to load and run U-Boot

sources {
	power_prep="./bin/power_prep";
	sdram_prep="./bin/boot_prep";
	image="./u-boot";
}

section (0) {

	//----------------------------------------------------------
	// Power Supply initialization
	//----------------------------------------------------------

	load power_prep;
	call power_prep;

	//----------------------------------------------------------
	// SDRAM initialization
	//----------------------------------------------------------

	load sdram_prep;
	call sdram_prep;

	//----------------------------------------------------------
	//  Load and call u_boot - ELF ARM image
	//----------------------------------------------------------

        load image;
        call image;
}
